{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "YourNameOrOrganization",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@octokit/rest": "^22.0.1",
    "@types/js-yaml": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.41.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "js-yaml": "^4.1.0",
    "nock": "^14.0.10",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.3"
  }
}
